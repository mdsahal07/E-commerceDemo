<section>
  <div class="container">
    <div class="row mt-4">
        <a href="/admin/addProduct" class="btn btn-success ml-auto" >Add product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th>Image</th>
        </tr>
      </thead>                        
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}} </td>
          <td>{{this.Description}}</td>
         <td><img style="width:50px; height:50px;" src="/product-image/{{this._id}}.jpg" alt=""> </td>
          <td><a class="btn btn-primary" href="/admin/editProduct/{{this._id}}">Edit</a>
          <td><a class="btn btn-danger" href="/admin/deleteProduct/{{this._id}} " onclick= "return confirm('Are you sure you want to delete {{this.Name}}')" >Delete</a>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
